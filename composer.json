{
    "name": "dpc-sdp/vicgovau",
    "description": "Drupal 8 site for Vicgovau",
    "license": "proprietary",
    "require": {
        "composer/installers": "^1.2.0",
        "cweagans/composer-patches": "^1.6.0",
        "dpc-sdp/bay": "^0.0.1",
        "dpc-sdp/tide": "^0.0.1",
        "drupal-composer/drupal-scaffold": "^2.3",
        "drupal/admin_toolbar": "^1.20",
        "drupal/coffee": "^1.0@beta",
        "drupal/config_filter": "^1.2",
        "drupal/config_ignore": "^2.1",
        "drupal/config_split": "^1.3",
        "drupal/config_update": "^1.5",
        "drupal/devel": "^1.2",
        "drupal/environment_indicator": "^3.2",
        "drupal/shield": "^1.2",
        "drupal/stage_file_proxy": "^1.0@alpha",
        "drush/drush": "^8.1",
        "library/dropzone": "^4.3",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "behat/behat": "3.3.1",
        "behat/gherkin": "4.4.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.3",
        "drupal/coder": "^8.2",
        "drupal/config_devel": "^1.2",
        "drupal/console": "^1.0",
        "drupal/drupal-extension": "~3.3.0",
        "guzzlehttp/psr7": "^1.4",
        "integratedexperts/behat-format-progress-fail": "^0.2.1",
        "integratedexperts/behat-relativity": "^0.3",
        "integratedexperts/behat-screenshot": "^0.7",
        "php-http/curl-client": "^1.7",
        "phpunit/phpunit": "^5.7.19",
        "symfony/filesystem": "^3.2.8",
        "ubirak/rest-api-behat-extension": "dev-feature/drupalextension-compatibility as 7.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "docroot/core",
            "dpc-sdp",
            "tests/unit/"
        ]
    },
    "config": {
        "platform": {
            "php": "7.1"
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": {
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "dpc-sdp/bay": {
            "type": "path",
            "url": "dpc-sdp/bay"
        },
        "dpc-sdp/tide": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide.git"
        },
        "dpc-sdp/tide_api": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_api.git"
        },
        "dpc-sdp/tide_core": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_core.git"
        },
        "dpc-sdp/tide_landing_page": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_landing_page.git"
        },
        "dpc-sdp/tide_media": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_media.git"
        },
        "dpc-sdp/tide_monsido": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_monsido.git"
        },
        "dpc-sdp/tide_news": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_news.git"
        },
        "dpc-sdp/tide_page": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_page.git"
        },
        "dpc-sdp/tide_search": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_search.git"
        },
        "dpc-sdp/tide_site": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_site.git"
        },
        "dpc-sdp/tide_test": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_test.git"
        },
        "dpc-sdp/tide_webform": {
            "type": "vcs",
            "url": "git@github.com:dpc-sdp/tide_webform.git"
        },
        "library/dropzone": {
            "type": "package",
            "package": {
                "name": "library/dropzone",
                "version": "4.3.0",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/enyo/dropzone/archive/v4.3.0.zip",
                    "type": "zip"
                }
            }
        },
        "package/ckeditor-iframe": {
            "type": "package",
            "package": {
                "name": "ckeditor/iframe",
                "type": "drupal-library",
                "version": "4.5.11",
                "dist": {
                    "type": "zip",
                    "url": "https://download.ckeditor.com/iframe/releases/iframe_4.5.11.zip",
                    "reference": "master"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        },
        "package/ckeditor-fakeobjects": {
            "type": "package",
            "package": {
                "name": "ckeditor/fakeobjects",
                "type": "drupal-library",
                "version": "4.5.11",
                "dist": {
                    "type": "zip",
                    "url": "https://download.ckeditor.com/fakeobjects/releases/fakeobjects_4.5.11.zip",
                    "reference": "master"
                },
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        },
        "package/ckeditor-templates": {
            "type": "package",
            "package": {
                "name": "ckeditor/templates",
                "type": "drupal-library",
                "version": "4.5.7",
                "dist": {
                    "type": "zip",
                    "url": "https://download.ckeditor.com/templates/releases/templates_4.5.7.zip",
                    "reference": "master"
                }
            }
        },
        "ubirak/rest-api-behat-extension": {
            "type": "vcs",
            "url": "https://github.com/integratedexperts/rest-api-behat-extension"
        }
    },
    "scripts": {
        "app:build": [
            "@bay:start",
            "docker exec -i $(docker-compose ps -q cli) composer install -n --ansi --prefer-dist",
            "@app:db-import",
            "@app:search-index"
        ],
        "app:rebuild": [
            "@app:cleanup",
            "@app:build"
        ],
        "app:rebuild-full": [
            "@app:cleanup",
            "@bay:rebuild-full",
            "docker exec -i $(docker-compose ps -q cli) composer install -n --ansi --prefer-dist",
            "@app:db-import",
            "@app:search-index"
        ],
        "app:cs": [
            "phpcs --colors"
        ],
        "app:test": [
            "@app:test-phpunit",
            "@app:test-behat"
        ],
        "app:test-phpunit": [
            "docker exec -i $(docker-compose ps -q cli) vendor/bin/phpunit"
        ],
        "app:test-behat": [
            "docker exec -i $(docker-compose ps -q cli) vendor/bin/behat --format=progress_fail --colors"
        ],
        "app:login": [
            "@composer bay:cli -- drush uublk 1 -r /app/docroot",
            "@composer bay:cli -- drush uli -r /app/docroot -l http://content-vicgovau.docker.amazee.io/ | xargs open"
        ],
        "app:drush": "docker exec -i $(docker-compose ps -q cli) drush -r /app/docroot",
        "app:cr": "@composer bay:cli -- drush cr -r /app/docroot -y",
        "app:cleanup": [
            "rm -Rf vendor",
            "rm -Rf node_modules",
            "chmod -Rf 777 docroot/sites/default",
            "git ls-files --directory --other -i --exclude-from=.gitignore docroot|xargs rm -Rf"
        ],
        "app:debug-drush": "docker exec -i $(docker-compose ps -q cli) /app/scripts/xdebug.sh /app/vendor/bin/drush -r /app/docroot",
        "app:site-install": "@composer bay:cli -- ./scripts/drupal/site-install.sh",
        "app:db-import": [
            "docker exec -i $(docker-compose ps -q redis) redis-cli flushall",
            "@composer bay:cli -- ./scripts/rebuild-env.sh"
        ],
        "app:search-index": [
            "@composer bay:cli -- drush search-api-enable",
            "@composer bay:cli -- drush search-api-clear",
            "@composer bay:cli -- drush search-api-index 0 50"
        ],
        "bay:start": "docker-compose up -d",
        "bay:rebuild-full": "docker-compose up -d --build --force-recreate",
        "bay:restart": "docker-compose restart",
        "bay:stop": "docker-compose stop",
        "bay:destroy": "docker-compose down -v",
        "bay:logs": "docker-compose logs",
        "bay:cli": "docker exec -i $(docker-compose ps -q cli)",
        "bay:pull": "docker image ls --format \"{{.Repository}}:{{.Tag}}\" | grep -E \"amazeeio|dpc_sdp|singledigital\" | grep -v none | xargs -n1 docker pull | cat",
        "bay:doctor": "./scripts/bay/doctor.sh",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "source": "http://cgit.drupalcode.org/drupal/plain/{path}?h={version}",
            "includes": [
                ".editorconfig",
                ".eslintignore",
                ".gitattributes",
                ".htaccess",
                "index.php",
                "update.php"
            ],
            "excludes": [
                "robots.txt"
            ],
            "omit-defaults": true
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "preserve-paths": [
            "docroot/modules/custom",
            "docroot/themes/custom",
            "docroot/drush",
            "docroot/sites/default/settings.php",
            "docroot/sites/default/default.settings.local.php",
            "docroot/sites/default/files"
        ],
        "patches": {
            "dpc-sdp/tide_landing_page": {
                "[SDPA-735] Hero Banner with Hero Image - Tide": "./patches/SDPA-735-Hero-Banner-with-Hero-Image-Tide.patch"
            }
        }
    }
}
